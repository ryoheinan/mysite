  "schedule":[
    "before 10am on the first day of the month"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "reviewers": ["ryoheinan"],
  "packageRules": [
    {
      "groupName": "ESLint and Prettier",
