{
  "extends": ["config:base", ":preserveSemverRanges"],
  "timezone": "Asia/Tokyo",
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 10am on sunday"
  },
  "packageRules": [
    {
      "groupName": "ESLint and Prettier",
      "packageNames": ["eslint", "prettier"],
      "packagePatterns": [
        "^@nuxtjs/eslint-config",
        "^eslint-config-",
        "^eslint-plugin-",
        "^@typescript-eslint"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["Security"]
  }
}
